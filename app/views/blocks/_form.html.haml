= form_for(@block) do |f|
  - if @block.errors.any?
    #error_explanation
      %h2
        = pluralize(@block.errors.count, "error")
        prohibited this block from being saved:
      %ul
        - @block.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :subscription_id
    %br/
    = f.text_field :subscription_id
  .field
    = f.label :block_list_id
    %br/
    = f.text_field :block_list_id
  .actions
    = f.submit
