= form_for @subscription, :html => { :class => "form-horizontal subscription" } do |f|
  - if @subscription.errors.any?
    #error_expl.panel.panel-danger
      .panel-heading
        %h3.panel-title
          = pluralize(@subscription.errors.count, "error")
          prohibited this subscription from being saved:
      .panel-body
        %ul
          - @subscription.errors.full_messages.each do |msg|
            %li= msg
  .form-group
    = f.label :user_id, :class => 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :user_id, :class => 'form-control'
    = f.error_span(:user_id)
  .form-group
    = f.label :block_list_id, :class => 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :block_list_id, :class => 'form-control'
    = f.error_span(:block_list_id)
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil, :class => 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), |
        subscriptions_path, :class => 'btn btn-default'              |
