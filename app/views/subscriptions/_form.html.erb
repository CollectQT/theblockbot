<%= form_for @subscription, :html => { :class => "form-horizontal subscription" } do |f| %>

  <% if @subscription.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@subscription.errors.count, "error") %> prohibited this subscription from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @subscription.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :user_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:user_id) %>
  </div>
  <div class="form-group">
    <%= f.label :block_list_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :block_list_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:block_list_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                subscriptions_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
