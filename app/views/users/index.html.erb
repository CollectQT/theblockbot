<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Display name</th>
      <th>Account created</th>
      <th>Default profile image</th>
      <th>Description</th>
      <th>Incoming follows</th>
      <th>Outgoing follows</th>
      <th>Account</th>
      <th>Profile image url</th>
      <th>User name</th>
      <th>Website</th>
      <th>Posts</th>
      <th>Times reported</th>
      <th>Times blocked</th>
      <th>Reports</th>
      <th>Blocks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.display_name %></td>
        <td><%= user.account_created %></td>
        <td><%= user.default_profile_image %></td>
        <td><%= user.description %></td>
        <td><%= user.incoming_follows %></td>
        <td><%= user.outgoing_follows %></td>
        <td><%= user.account_id %></td>
        <td><%= user.profile_image_url %></td>
        <td><%= user.user_name %></td>
        <td><%= user.website %></td>
        <td><%= user.posts %></td>
        <td><%= user.times_reported %></td>
        <td><%= user.times_blocked %></td>
        <td><%= user.reports %></td>
        <td><%= user.blocks %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

