= form_for @block_list, :html => { :class => "form-horizontal block_list" } do |f|
  - if @block_list.errors.any?
    #error_expl.panel.panel-danger
      .panel-heading
        %h3.panel-title
          = pluralize(@block_list.errors.count, "error")
          prohibited this block_list from being saved:
      .panel-body
        %ul
          - @block_list.errors.full_messages.each do |msg|
            %li= msg
  .form-group
    = f.label :name, :class => 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :name, :class => 'form-control'
    = f.error_span(:name)
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil, :class => 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), |
        block_lists_path, :class => 'btn btn-default'                |
