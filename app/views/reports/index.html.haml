- model_class = Report
.page-header
  %h1= t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:text)
      %th= model_class.human_attribute_name(:created_at)
      %th Block List
      %th= t '.actions', :default => t("helpers.actions")
  %tbody
    - @reports.each do |report|
      %tr
        %td= link_to report.id, report_path(report)
        %td= report.text
        %td= l report.created_at
        %td= BlockList.find(report.block_list_id).name
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), |
            edit_report_path(report),                                |
            :class => 'btn btn-default btn-xs'                       |
          = button_to t('.destroy', :default => t("helpers.links.destroy")),                                             |
            report_path(report),                                                                                         |
            :method => :delete,                                                                                          |
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
            :class => 'btn btn-xs btn-danger'                                                                            |
          = button_to 'Approve',               |
            report_path(report),               |
            :method => :post,                  |
            :class => 'btn btn-xs btn-primary' |
